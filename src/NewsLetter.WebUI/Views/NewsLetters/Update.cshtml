@using NewsLetter.Domain.Entities
@model Blog
@{
    HttpContextAccessor httpContextAccessor = new();
    var isAuthenticated = httpContextAccessor.HttpContext!.User.Claims.Any();

    if (Model == null)
    {
        <p class="text-danger">Blog not found.</p>
        return;
    }
    var blog = Model;

    ViewData["Title"] = "Updaet Blog";

    if (!isAuthenticated)
    {
        return;
    }
}
<div class="row d-flex justify-content-center">
    <a href="javascript:history.go(-1)" class="btn btn-outline-warning fw-bold">
        <i class="fa-solid fa-backward"></i>
        Goto Back
    </a>
    <div class="col-8">
        <form asp-controller="Newsletters" asp-action="Create" method="post" autocomplete="off">
            <div class="form-group">
                <label>@blog.Title</label>
                <input class="form-control" name="title" />
            </div>

            <div class="form-group mt-2">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch!" id="isPublish" name="isPublish">
                    <label class="form-check-label" for="isPublish">Is Publish</label>
                </div>
            </div>

            <div class="form-group mt-2">
                <label>Publish Date</label>
                <input type="date" name="publishDate" class="form-control" />
            </div>

            <div class="form-group mt-2">
                <label>Summary</label>
                <textarea class="form-control" name="summary"></textarea>
            </div>

            <div class="form-group mt-2">
                <label>Content</label>
                <textarea class="form-control" name="content" rows="15"></textarea>
            </div>

            <div class="form-group mt-2">
                <button type="submit" class="btn btn-outline-warning w-100">
                    <i class="fa-solid fa-save me-1"></i>
                    Save
                </button>
            </div>
        </form>
    </div>
</div>